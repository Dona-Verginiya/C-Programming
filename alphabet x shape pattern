#include<stdio.h>
int main()
{
    int n;
    char t=96;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=n;j++)
        {
            if(i==j || i+j==n+1)
            {
            t++;
            printf("%c ",t);
            }
            else
            { 
                printf("  ");
            }
        }
        printf("\n");
    }
}
